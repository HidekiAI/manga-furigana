{
  "manifest_version": 2,
  "name": "Furigana OCR using Kagome v2 - manifest.json",
  "version": "1.0",
  "permissions": [
    "nativeMessaging",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://*/*"
    ]
  },
  "applications": {
    "gecko": {
      "id": "manga-furigana@codemonkeyninja.dev",
      "strict_min_version": "42.0"
    }
  }
}